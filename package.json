{
  "name": "@adonisjs/events",
  "version": "8.4.9-4",
  "description": "An implementation of the event emitter built on top of emittery",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/factories",
    "build/index.d.ts",
    "build/index.js"
  ],
  "imports": {
    "#listeners/*": "./tests/app/listeners/*.js"
  },
  "exports": {
    ".": "./build/index.js",
    "./factories": "./build/factories/main.js",
    "./types": "./build/src/types.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=adonisjs:events c8 npm run quick:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/events",
    "quick:test": "node --loader=ts-node/esm --experimental-import-meta-resolve bin/test.ts"
  },
  "keywords": [
    "emitter",
    "events"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/application": "^7.1.2-6",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/fold": "^9.9.3-5",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@japa/assert": "^2.0.0-1",
    "@japa/expect-type": "^2.0.0-0",
    "@japa/file-system": "^2.0.0-1",
    "@japa/runner": "^3.0.0-3",
    "@swc/core": "^1.3.71",
    "@types/node": "^20.4.5",
    "c8": "^8.0.1",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.45.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@poppinss/utils": "^6.5.0-3",
    "@sindresorhus/is": "^5.6.0",
    "emittery": "^1.0.1"
  },
  "peerDependencies": {
    "@adonisjs/application": "^7.1.2-3",
    "@adonisjs/fold": "^9.9.3-4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/events.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/events/issues"
  },
  "homepage": "https://github.com/adonisjs/events#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config"
}
